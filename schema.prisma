// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id       String     @id @default(cuid())
  name     String
  email    String     @unique
  Favorite Favorite[]
}

model Favorite {
  id           String    @unique
  title        String
  overview     String
  poster_path  String
  release_date String
  vote_average String
  vote_count   String
  user         User      @relation(fields: [userId], references: [id])
  userId       String
  Comment      Comment[]
}

model Comment {
  id         String   @id @default(cuid())
  comment    String
  CreatedAt  DateTime @default(now())
  Favorite   Favorite @relation(fields: [FavoriteId], references: [id])
  FavoriteId String
}
